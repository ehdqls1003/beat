<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity1">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/topline"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topline"
        />

    <View
        android:id="@+id/topline"
        app:layout_constraintTop_toBottomOf="@id/title"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />
    <ImageView
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/topline"
        android:id="@+id/iv_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/gibon"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_feed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="내 피드 가기"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_view"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="하이라이트"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_feed"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매한 음악"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basket"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>