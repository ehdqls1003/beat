<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Show_highlight"
    android:id="@+id/con">

  <ImageView
      android:id="@+id/img_blur"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"/>
  <ImageView
      android:id="@+id/img"
      android:layout_width="match_parent"
      android:layout_height="380dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <ImageView
      android:id="@+id/user_img"
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_margin="20dp"/>
  <TextView
      android:id="@+id/user_id"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      app:layout_constraintTop_toTopOf="@id/user_img"
      app:layout_constraintBottom_toBottomOf="@id/user_img"
      app:layout_constraintLeft_toRightOf="@id/user_img"
      android:layout_marginLeft="10dp"
      android:text="유저이름"
      android:textStyle="bold"
      android:gravity="center_vertical"
      android:textColor="@color/colorgray"
      android:textSize="20dp"/>
  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      app:layout_constraintLeft_toLeftOf="@id/user_img"
      app:layout_constraintBottom_toTopOf="@id/user_img"
      android:layout_marginBottom="10dp"
      android:textSize="20dp"
      android:gravity="center_vertical"
      android:textColor="@color/colorgray"
      android:text="음악 제목"
      android:textStyle="bold"
      />

  <ImageView
      android:id="@+id/comment"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/comment2"

      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_margin="20dp"/>

  <ImageView
      android:id="@+id/heart_outline"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/heart_outline"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/comment"
      android:layout_marginBottom="30dp"
      android:layout_marginRight="20dp"/>

  <ImageView
      android:id="@+id/heart"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/heart"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/comment"
      android:layout_marginBottom="30dp"
      android:layout_marginRight="20dp"/>
  <TextView
      android:id="@+id/heart_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@id/comment"
      app:layout_constraintBottom_toTopOf="@id/comment"
      app:layout_constraintRight_toRightOf="@id/comment"
      android:layout_marginBottom="10dp"
      android:textStyle="bold"
      android:textColor="@color/colorgray"
      android:text="숫자"/>

  <ImageView
      android:id="@+id/play"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/play"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
    />
  <ImageView
      android:id="@+id/pause"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@drawable/pause"
      android:visibility="invisible"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>