    <TextView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="내 플레이리스트"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/topline"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/playlist"
        app:layout_constraintBottom_toBottomOf="@id/playlist"
        app:layout_constraintRight_toRightOf="parent"
        android:text=">"
        android:textSize="40dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"/>


    <View
        android:id="@+id/middleline"
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/playlist" />

    <TextView
        android:id="@+id/likelist"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="좋아요"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/middleline"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/likelist"
        app:layout_constraintBottom_toBottomOf="@id/likelist"
        app:layout_constraintRight_toRightOf="parent"
        android:text=">"
        android:textSize="40dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"/>


    <View
        android:id="@+id/middleline2"
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/likelist" />



